<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.tam.tb_food.activity.LienHeActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarLienHe"
        app:titleTextColor="#434386"
        android:background="#b1a7be"
        app:title="LIÊN HỆ"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/hinhnen"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Bùi Ngọc Tâm"
            android:textColor="#c62b23"
            android:textSize="30sp" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:background="@drawable/boder"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:drawableLeft="@drawable/facebook"
                android:gravity="center"
                android:text="      facebook.com/tam.bn.tt"
                android:textColor="#030303"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/github"
                android:gravity="center"
                android:text="      github.com/bntamm"
                android:textColor="#030303"
                android:textSize="18sp" />


            <TextView
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/linkedin"
                android:gravity="center"
                android:text="Linkedin.com/in/tam-bui-301194"
                android:textColor="#030303"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:background="@drawable/boder"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/phone1"
                android:gravity="center"
                android:text="   0973689272"
                android:textColor="#030303"
                android:textSize="19sp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/email"
                android:gravity="center"
                android:text="      Bntamm@gmail.com"
                android:textColor="#030303"
                android:textSize="19sp" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
