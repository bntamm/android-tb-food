<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    android:layout_height="match_parent"
    android:weightSum="10"
    tools:context="com.example.tam.tb_food.activity.ThongTinThanhToanKhachHang">


    <LinearLayout


        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="200dp"
        android:layout_height="160dp">

        <ImageView
            android:background="@drawable/foodlogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout

        android:orientation="vertical"
        android:background="@drawable/boder"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:layout_width="match_parent"
        android:layout_height="360dp">

        <TextView
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="#09090a"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text="Thông tin khách hàng!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_margin="5dp"
                android:id="@+id/edittextTenkhachhang"
                android:inputType="text"
                android:hint="Tên khách hàng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_margin="5dp"
                android:id="@+id/edittextDiachikhachhang"
                android:inputType="textEmailAddress"
                android:hint=" Địa Chỉ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_margin="5dp"
                android:id="@+id/edittextSodienthoai"
                android:inputType="phone"
                android:hint="Số điện thoại"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:gravity="center"

            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_marginRight="70dp"
                android:background="@drawable/custom_button_thongtinkhachhang"
                android:textColor="#ffffff"
                android:textSize="13sp"
                android:padding="10dp"
                android:id="@+id/buttonxacnhan"
                android:text="Xác Nhận"
                android:layout_width="90dp"
                android:layout_height="35dp" />

            <Button
                android:background="@drawable/custom_button_thongtinkhachhang"
                android:textColor="#ffffff"
                android:textSize="13sp"
                android:padding="10dp"
                android:id="@+id/buttontrove"
                android:text="Trở Về"
                android:layout_width="90dp"
                android:layout_height="35dp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
